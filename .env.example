# Krkn Operator Console - Environment Configuration

# API endpoint - for local development
# Use port-forward: kubectl port-forward svc/krkn-operator-controller-manager-api-service 8080:8080
VITE_API_URL=/api/v1

# Polling configuration
VITE_POLL_INTERVAL=3000        # Poll every 3 seconds
VITE_POLL_TIMEOUT=60000        # Timeout after 60 seconds

# Feature flags
VITE_SHOW_NODES=false          # Future: show node list
VITE_DEBUG_MODE=false          # Enable debug logging
